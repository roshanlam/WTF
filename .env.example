# ============================================
# WTF Application Environment Variables
# Copy this to .env and fill in your values
# ============================================

# ============================================
# Supabase Configuration
# Get these from: https://app.supabase.com > Project Settings
# ============================================

# Supabase Project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (public, safe for client-side)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (SECRET! Never commit this!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Supabase Database URL (for migrations)
SUPABASE_DB_URL=postgresql://postgres:your-password@db.xxxxx.supabase.co:5432/postgres

# ============================================
# Redis Configuration (for caching)
# ============================================

REDIS_URL=redis://redis:6379/0
REDIS_POOL_SIZE=50
REDIS_POOL_TIMEOUT=30
CACHE_ACTIVE_USERS_TTL=300

# ============================================
# Message Queue
# ============================================

MQ_STREAM=events.free-food

# ============================================
# Email Configuration (Gmail with App Password)
# Get app password: https://support.google.com/accounts/answer/185833
# ============================================

# Gmail SMTP settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
USE_SSL=true
USE_STARTTLS=false

# Batch processing configuration
EMAIL_BATCH_SIZE=100
EMAIL_MAX_CONCURRENT_BATCHES=10
EMAIL_RATE_LIMIT_PER_SECOND=10.0
EMAIL_MAX_RETRIES=3

# ============================================
# LLM Configuration (Cloudflare Workers AI)
# ============================================

CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# ============================================
# Application Settings
# ============================================

API_PORT=8000
DECISION_GATEWAY_PORT=8100
NOTIFICATION_PORT=8200
ENVIRONMENT=development
DEBUG=true
